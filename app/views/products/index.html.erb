<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://eysing.com/wp-content/uploads/2023/06/Eysing-PF40-Home.jpg);">
  <div class="container">
    <h1><strong>Go electric now</strong> - choose your EV and <strong>ride green</strong> with E-Mobile!</h1>
    <p>Renting & subscribing to the newest electric vehicles has never been easier.</p>
  </div>
</div>

<div class="container">
  <div class="row mt-3">
    <div class="col-9">
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-3 mb-4">
            <%= link_to product_path(product), class: "product-link" do %>
              <div class="card">
                <img src="<%= cl_image_path product.photo.key, height: 300, crop: :fill %>" class="card-img-top" alt="product">
                <div class="card-body">
                  <h5 class="card-title mb-3"><strong><%= product.model %></strong></h5>
                  <p class="card-text"><i>Location: <%= product.location %></i></p>
                  <p class="card-text"><i>Price: <u><%= product.price %></u></i></p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

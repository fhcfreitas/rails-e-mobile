<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://eysing.com/wp-content/uploads/2023/06/Eysing-PF40-Home.jpg);">
  <div class="container">
    <h1>Rent the right <strong>electric vehicle</strong> to <strong>you</strong>!</h1>
    <p>Go anywhere with the best electic vehicles on the market</p>
  </div>
</div>

<div class="container">
  <div class="row mt-3">
    <div class="col-9">
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-3 mb-4">
            <%= link_to product_path(product), class: "product-link" do %>
              <div class="card">
                <img src="<%= cl_image_path product.photo.key, height: 300, crop: :fill %>" class="card-img-top" alt="product">
                <div class="card-body">
                  <h5 class="card-title"><%= product.model %></h5>
                  <p class="card-text"><strong>Location:</strong> <%= product.location %></p>
                  <p class="card-text"><strong>Price:</strong> <%= product.price %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

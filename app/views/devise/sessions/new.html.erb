<div class="container">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card card-login mt-3">
        <div class="card-body">
          <h2 class="text-center mt-3">Log in</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: 'form-control custom-placeholder', placeholder: "Email"} %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: 'form-control custom-placeholder', placeholder: "Password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= form_tag(products_path, method: :get) do %>
  <div class="rounded-box m-2" style="background-color: white; border: 1px solid #ddd; border-radius: 5px;">
    <div class="input-group">
      <%= text_field_tag :location, params[:location], class: 'form-control', class: 'form-control custom-placeholder', placeholder: 'Location' %>
      <%= text_field_tag :category, params[:category], class: 'form-control', class: 'form-control custom-placeholder', placeholder: 'Bike or Car' %>
      <div class="input-group-append">
        <%= button_tag(type: 'submit', class: 'btn btn-dark') do %>
          <i class="fas fa-search"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
